        // numMode parameters - it shows you what the numOperations do
        // ******************
        // 1 for +
        // 2 for -
        // 3 for divide
        // 4 for X
        // ******************

        

        public static class varGroup
        {
            public static int numMode; // for number mode type
            public static int num1; // num1 to (numMode) with num2
            public static int num2; // num2 to (numMode) with num1
            public static int result; // collects the result and in a 50ms loop (forever loop but don't freeze app) + in another script, puts the textbox's text to this result
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e) // NEXT BUTTON--numMode controller, another script will indicate label in another 50ms loop
        {
            if (varGroup.numMode == 4)
            {
                varGroup.numMode = 1; // so dosen't get stuck
            }
            else
            {
                varGroup.numMode++; // keep going
            }
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            varGroup.numMode = 1; // reset to default numMode value
        }

        private void timer1_Tick(object sender, EventArgs e) // LOOP timer1 SCRIPT 50ms for indicating numMode parameter on label
        {
            if (varGroup.numMode == 1)
            {
                label1.Text = "+";
            }
            else if (varGroup.numMode == 2)
            {
                label1.Text = "-";
            }
            else if (varGroup.numMode == 3)
            {
                label1.Text = "รท";
            }
            else if (varGroup.numMode == 4)
            {
                label1.Text = "X";
            }

            

            this.Update(); // Updates the window (prob without flicker)
            this.Refresh(); // Refreshes the window (low chance of flicker)
            
            timer1.Interval = 50; // 50 ms loop with timer1 enabled

        }

        private void button2_Click(object sender, EventArgs e) // Calculates num1 (numMode parameter) num2 , then stores it in textbox3 to display result on the form
        {
            if (varGroup.numMode == 1)
            {
                varGroup.result = varGroup.num1 + varGroup.num2;
                textBox3.Text = varGroup.result.ToString();
            }
            else if (varGroup.numMode == 2)
            {
                varGroup.result = varGroup.num1 - varGroup.num2;
                textBox3.Text = varGroup.result.ToString();
            }
            else if (varGroup.numMode == 3)
            {
                varGroup.result = varGroup.num1 / varGroup.num2;
                textBox3.Text = varGroup.result.ToString();
            }
            else if (varGroup.numMode == 4)
            {
                varGroup.result = varGroup.num1 * varGroup.num2;
                textBox3.Text = varGroup.result.ToString();
            }
            else
            {
                // do nothing
            }
            
        }

        private void timer2_Tick(object sender, EventArgs e) // loop script (50ms) to keep setting the num1 and num2 to the input
        {
            if (textBox1.TextLength > 0)
            {
                varGroup.num1 = Int32.Parse(textBox1.Text);
                varGroup.num2 = Int32.Parse(textBox2.Text);
            }
            else if (textBox2.TextLength > 0)
            {
                varGroup.num1 = Int32.Parse(textBox1.Text);
                varGroup.num2 = Int32.Parse(textBox2.Text);
            }
            else if (textBox1.TextLength == 0)
            {
                textBox1.Text = "1"; // THIS DEBUG SCRIPT DOES NOT WORK AS OF RIGHT NOW
            }
            else if (textBox2.TextLength == 0)
            {
                textBox1.Text = "1"; // THIS ONE ALSO
            }

            timer2.Interval = 50; // loop 50ms
        }

