        protected override void WndProc(ref Message m) // Code from here onwards is the borderless-form moving script, allows to move/drag window without border
        {
            base.WndProc(ref m);
            if (m.Msg == WM_NCHITTEST)
                m.Result = (IntPtr)(HT_CAPTION);
        }

